<p id="notice"><%= notice %></p>

<div class="sort-options-container">
	Sort By:
	  <%= link_to "Title", movies_path(:filter => "title"), class: "btn btn-info btn-sm" %> 
	  <%= link_to "Release Date", movies_path(:filter => "release_date"), class: "btn btn-info btn-sm" %> 
	  <%= link_to "Genre", movies_path(:filter => "genre"), class: "btn btn-info btn-sm" %> 
</div>

<div class="row">
	<% @movies.each do |movie| %>
		<div class="col-md-3">
			<%= link_to show_movie_path(:movie_id => movie.id) do %>
				<img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= movie.poster_path %>" class="movie-poster-image">
			<% end %>
			<p class="movie-list-title"><%= movie.title %></p>
		</div>
	<% end %>
</div>