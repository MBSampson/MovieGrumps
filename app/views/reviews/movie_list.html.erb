<div class="container">
	<div class="row">
		<% @movies.results.each do |movie| %>
			<div class="col-md-3">
				<%= link_to movie_path(:movie_id => movie.id) do %>
					<img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= movie.poster_path %>">
				<% end %>
			</div>
		<% end %>
	</div>
</div>	