<% @movies.each do |movie| %>

	<div class="row review-item">
		<div class="col-xl-3">
			<img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= movie.poster_path %>">
		</div>
		<div class="col-xl-9">
			<h3><%= movie.title %></h3>
			<p>Release Date: <%= movie.release_date %></p>
			<p>Genre: 
				<% movie.genre_ids.each do |movie_genre| %>
					<% @genres.each do |genre| %>
						<% if genre.genre_id == movie_genre %>
							<span class="btn btn-secondary btn-sm"><%= genre.name %></span>
						<% end %>
					<% end %>
				<% end %>
			</p>

			<% @movie_reviews = [] %>
			<% @reviews.each do |review| %>
				<% if review.movie_title == movie.title %>
					<% @movie_reviews.push(review) %>
				<% end %>
			<% end %>

			<% @movie_reviews[0..2].each_with_index do |review| %>
				<% if review.movie_title == movie.title %>
					<div class="movie-review-content">
						<em>"<%= review.comment %>"</em> 
						<p class="review-author-text">-<%= review.user_email %></p>
					</div>
				<% end %>
			<% end %>

			<% if @movie_reviews.length > 2 %>
				<%= link_to "View More", show_movie_path(:movie_id => movie.id) %>
			<% end %>

			<%= link_to 'Leave a Review', new_review_path(:movie_title => movie.title) %>	
		</div>
	</div>

<% end %>